@model IEnumerable<NapMap.Models.Marker>

@{
    ViewData["Title"] = "Markers Table";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>
        </tr>
    </thead>
    <tbody>
        @foreach (var marker in Model)
        {
            <tr>
                <td>@marker.Id</td>
                <td>@marker.Title</td>
                <td>@marker.Latitude</td>
                <td>@marker.Longitude</td>
                <td>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-marker-id="@marker.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Marker</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this marker?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteMarkerForm" data-url="@Url.Action("DeleteMarker", "Home")" asp-action="DeleteMarker" asp-controller="Home" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   <script src="~/js/markerModal.js"></script>
}
